{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": "src",
    "typeRoots": ["./node_modules/@types", "src/typings/*.d.ts"]
  },
  "include": ["src", "./index.ts"]
}
